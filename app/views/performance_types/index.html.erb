<h1>Listing performance_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performance_types.each do |performance_type| %>
      <tr>
        <td><%= performance_type.name %></td>
        <td><%= performance_type.notes %></td>
        <td><%= link_to 'Show', performance_type %></td>
        <td><%= link_to 'Edit', edit_performance_type_path(performance_type) %></td>
        <td><%= link_to 'Destroy', performance_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

