<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @tag.name %>
</p>

<%= link_to 'Edit', edit_tag_path(@tag) %> |
<%= link_to 'Back', tags_path %>

<table>
  <thead>
    <tr>
      <th>Compositions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag.compositions.each do |composition| %>
      <tr>
        <td><%= composition.title %></td>
        <td><%= link_to composition.title, composition %></td>
      </tr>
    <% end %>
  </tbody>
